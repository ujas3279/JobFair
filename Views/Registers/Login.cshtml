@model JobFair.Models.Register
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<section class="vh-100" style="background-color: #eee;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>
                                <form class="mx-1 mx-md-4" asp-controller="Registers" asp-action="Login">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="container">
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label asp-for="Email" class="control-label" for="uname">Email</label>
                                                <input asp-for="Email" type="text" placeholder="Enter Email" name="Email" class="form-control" pattern="^[a-zA-Z0-9+_.-]+@@[a-zA-Z0-9.-]+\.[a-zA-z]{2,}$"
                                                       title="Email Address Not In Proper Form" required>

                                            </div>
                                        </div>


                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <label asp-for="Password" class="control-label" for="pwd">Password</label>
                                                <input asp-for="Password" type="password" placeholder="Enter Password" class="form-control"
                                                       pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}"
                                                       title="Must contain at least one number and one uppercase and lowercase letter, and at least 6 or more characters" required>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <input type="submit" class="btn btn-primary btn-lg" value="Login">
                                        </div>


                                    </div>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>